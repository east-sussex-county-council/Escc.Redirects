<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Escc.Redirects.Admin</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery-3.1.1.js")
</head>
<body>
    <div class="navbar-custom navbar-fixed-top">
        <div class="container">

            <div class="navbar-custom navbar-header">
                <button type="button" class="navbar-custom navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Escc.Redirects.Admin", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-custom navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.RouteLink("Moved", "ViewRedirects", new { Type = 2 }, new { })</li>
                    <li>@Html.RouteLink("ShortUrls", "ViewRedirects", new { Type = 1 }, new { })</li>
                </ul>
                <p class="nav navbar-text navbar-right">Hello @User.Identity.Name.Replace("ESCC\\", "")!</p>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p> <a href="https://www.eastsussex.gov.uk/"> <img src="~/Content/logo-small.gif" alt="ESCC"> </a> &copy; @DateTime.Now.Year - East Sussex County Council - Escc.Redirects.Admin</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
